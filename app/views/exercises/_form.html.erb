 <div class='row' "container graph">
  <div class='col-md-12'>
      <%= form_for([current_user, @exercise], :html => {class: "form-horizontal", role: "form"}) do |f| %>

        <% if @exercise.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@exercise.errors.count, "error") %>
            prohibited this exercise from being saved:
            </h2>
            <ul>
              <% @exercise.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

          <div class="form-group">
            <div class="control-label col-md-2">
              <%= f.label :duration_in_min, "Duration (mins)" %>
            </div>

            <div class="col-md-3">
              <%= f.number_field :duration_in_min, class: "form-control", min: "0", placeholder: "0" %>
            </div>
          </div>

          <div class="form-group">
            <div class="control-label col-md-2">
              <%= f.label :workout, "Workout Details" %><br>
            </div>
            <div class="col-md-8">
              <%= f.text_area :workout, class: "form-control", rows: "10", placeholder: "Enter Workout Details" %>

            </div>
          </div>

          <div class="form-group">
            <div class="control-label col-md-2">

              <%= f.label :workout_date, "Activity date" %>
            </div>
            <div class="col-md-3">
              <%= f.date_select(:workout_date, :order => [:month, :day, :year], class: 'form-control') %>

            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
              <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
          </div>

      <% end %>
    </div>
  </div>
