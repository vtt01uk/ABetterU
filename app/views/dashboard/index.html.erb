<div class="jumbotron">
  <h1>A Better U</h1>
  <p>Track | Compare | Compete for a healthier body</p>
</div>

<div class="background-wrap">
 <video id="rise" autoplay loop muted>
   <source src="Crossfit_.mp4" type="video/mp4">
   Video not supported
 </video>
</div>

<!--<% if user_signed_in? %>-->

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>List of Members</h2>
    <%= will_paginate @athletes, renderer: BootstrapPagination::Rails, class: "pull-left-paginate" %>
  </div>
</div>

<div class="container">
    <div class="row">
      <% @athletes.each do |athlete| %>
    <div class="col-md-10 col-md-offset-1 well member">
        <%= athlete.full_name %>
      <% if current_user %>
        <%= link_to "Add", friendships_path(friend_id: athlete.id), method: :post, class: "btn btn-primary pull-right" unless current_user.follows_or_same?(athlete) %>
      <% end %>
    </div>
      <% end %>
    </div>
      <% end %>
</div>

